<section class="flex flex-col p-4 mx-auto">
  <h2 class="text-center font-bold text-3xl mb-4">Sign up</h2>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "flex flex-col gap-4 p-8 shadow-lg rounded-md bg-white-05 mx-auto" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
  
    <div class="field *:w-full">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text-black"%>
    </div>

    <div class="field *:w-full">
      <%= f.label :username %><br />
      <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "text-black"%>
    </div>
  
    <div class="field *:w-full">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "text-black" %>
    </div>
  
    <div class="field *:w-full">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "text-black"%>
    </div>

    <button class="actions bg-white-05 hover:bg-dark cursor-pointer rounded-md p-2 my-2">
      <%= f.submit "Sign up" %>
    </button>
 
    <div class="flex gap-4">
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</section>
